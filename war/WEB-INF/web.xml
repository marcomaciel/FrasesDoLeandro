<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>frase</servlet-name>
		<servlet-class>br.com.mmaciel.frasesdoleandro.servlet.FraseServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>frase</servlet-name>
		<url-pattern>/frase</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>listar</servlet-name>
		<servlet-class>br.com.mmaciel.frasesdoleandro.servlet.ListarFrasesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>listar</servlet-name>
		<url-pattern>/listar</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>inserir</servlet-name>
		<servlet-class>br.com.mmaciel.frasesdoleandro.servlet.InserirFraseServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>inserir</servlet-name>
		<url-pattern>/inserir</url-pattern>
	</servlet-mapping>	
		
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
